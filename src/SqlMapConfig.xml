<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
		PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
<!--xml有2个大作用。第一个spring的xml ,放对象的容器﹐这个是 mybatis 的xml ,他是链接数据库的-->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver"/>
				<!--<property name="driver" value="com.mysql.cj.jdbc.Driver"/>-->
				<property name="url" value="jdbc:mysql://127.0.0.1:3306/sifa09mybatis"/>
				<property name="url" value="jdbc:mysql://127.0.0.1:3306/roadhelp"/>
				<property name="username" value="root"/>
				<property name="password" value="root"/>
			</dataSource>
		</environment>

	</environments>
	 	<mappers>
			<mapper resource="com/scy/dao/PersonDAO.xml"></mapper>
			<mapper resource="com/scy/dao/HumanDAO.xml"></mapper>
			<mapper resource="com/scy/dao/OrderDetailDAO.xml"></mapper>
			<mapper resource="com/scy/dao/OrdersDAO.xml"></mapper>
			<mapper resource="com/scy/dao/RoleDAO.xml"></mapper>
			<mapper resource="com/scy/dao/AccountDAO.xml"></mapper>

		</mappers>
</configuration>